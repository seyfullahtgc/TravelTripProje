@using TravelTripProje.Models.Sınıflar
@model List<Blog>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<body>
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left  margin-bot" style="margin-left:80px">Tatil Seyehat Bloğum</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restaurantlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Şeyler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Araba Kiralama</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider">
                            <ul class="rslides" id="slider1" style="width:650px;height:350px">

                                @foreach (var x in Model)
                                {

                                    <li><img src="@x.BlogImage" alt=""></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Tatil Seyahat Bloğuna Hoşgeldiniz</h3>
                    <p>
                        Gezip gördüğüm yerleri sizlerle paylaşmak için kodlamasını kendim yaptığım MVC5 ile geliştirmelerde bulundum.
                        Hem Türkiyeden hemde yurt dışında gezip gördüğüm yerlerinde doğal ve yapay güzelliklerini sizlerle paylaşmak istedim.
                        Özellikle üniversite 2.sınıfta okurken Amerikada Work and Travel programına katılarak inanılmaz güzel deneyimler kazandım ve bu deneyimleri sizlere aktarmak istedim.
                    </p>
                </div>

                @Html.Action("Partial1", "Test")

                <div class="grids">
                    <div class="box1">
                        @Html.Action("Partial3", "Test")
                        @Html.Action("Partial4", "Test")


                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

